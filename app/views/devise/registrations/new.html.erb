<h1 class="text-center text-2xl font-bold"><%= t ".sign_up" %></h1>
<div class="flex flex-col justify-center items-center mt-5">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "flex flex-col justify-center gap-3 w-[350px]" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="field flex flex-col w-full">
      <%= f.label :user_name, class: "text-lg font-semibold" %>
      <%= f.text_field :user_name, class: "w-full" %>
    </div>
    <div class="field flex flex-col w-full">
      <%= f.label :email, class: "text-lg font-semibold" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full" %>
    </div>
    <div class="field flex flex-col w-full">
      <%= f.label :password, class: "text-lg font-semibold" %>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full" %>
    </div>
    <div class="field flex flex-col w-full">
      <%= f.label :password_confirmation, class: "text-lg font-semibold" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full" %>
    </div>
    <div class="actions px-4 py-2  bg-primary text-white rounded-sm hover:opacity-70 text-lg flex items-center justify-center">
      <%= f.submit t(".sign_up") %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>
